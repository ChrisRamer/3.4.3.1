@{
	Layout = "_Layout";
}

@using MusicDatabase.Models
@model List<MusicDatabase.Models.Genre>

<h2 id="title">Genres</h1>

<hr />

@if (Model.Count == 0)
{
	<p>No genres have been added yet.</p>
}
else
{
	@foreach (Genre genre in Model)
	{
		<li>@Html.ActionLink($"{genre.Name}", "Details", new { id = genre.GenreId })</li>
	}
}

<hr />

<p>
	@Html.ActionLink("Add a new genre", "Create")
	|
	@Html.ActionLink("Go to homepage", "Index", "Home")
</p>