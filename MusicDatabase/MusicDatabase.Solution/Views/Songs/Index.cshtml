@{
	Layout = "_Layout";
}

@using MusicDatabase.Models
@model List<MusicDatabase.Models.Song>

<h2 id="title">Songs</h1>

 <hr />

	@if (Model.Count == 0)
	{
	 <p>No songs have been added yet.</p>
	}
	else
	{
		@foreach (Song song in Model)
		{
		 <li>@Html.ActionLink($"{song.Name}", "Details", new { id = song.SongId })</li>
		}
	}

 <hr />

 <p>
		@Html.ActionLink("Add a new song", "Create")
  |
		@Html.ActionLink("Go to homepage", "Index", "Home")
 </p>